<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <TextView
            android:textSize="25sp"
            android:textColor="@color/colorGreenTitle"
            android:id="@+id/txtVtituloReg4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:text="@string/titulo_registrar_plantas"
            />

        <ImageView
            android:id="@+id/imgVplantaR"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"

            android:src="@drawable/nodisponible"
            />

        <Button
            android:textColor="@color/colorGreenTitle"
            android:id="@+id/btnGuardarPlanta"

            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/button_border"
            android:layout_marginTop="470dp"
            android:text="@string/btn_guardar_plantas" />
    </RelativeLayout>
</ScrollView>